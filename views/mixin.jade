//- Navbar mixins
mixin nav(title, style, type)
    -var style = (typeof style === 'undefined') ? "default" : style
    nav(role="navigation", class=["navbar", "navbar-"+style])
        a.navbar-brand(href="#")=title
        if type == 1
            button#btnLogOut.navbar-text.btn.btn-danger.pull-right Odjavi se
//- End navbar mixins

//- panel mixins
mixin panel(tableID, postedAt, style)
    -var style = (typeof style === 'undefined') ? "default" : style
    -let date = new Date(postedAt)
    -let months = ["Januar", "Februar", "Mart", "April", "Maj", "Jun", "Jul", "Avgust", "Septembar", "Oktobar", "Novembar", "Decembar"]
    -let minutesPrefix = date.getMinutes()<10?'0':'';
    -let formated = months[date.getMonth()]+' '+date.getDate()+', '+date.getFullYear()+' - '+ date.getHours()+':'+minutesPrefix+ date.getMinutes()

    div(class=["panel", "panel-" + style] )
        .panel-heading.div
            .pull-left='NarudÅ¾bina za sto broj: '+tableID
            .pull-right.row
                .col-xs-10=' Vreme: ' + formated
                .col-xs-2
                    button(type="button" onClick="deleteOrder(this)" )='x'
            .clearfix
        .panel-body
            block
//- panel mixins